<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="androidx.test.ui.app.BinderIPCActivity">

  <Button
      android:id="@+id/convertButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:text="Start Remote Service" />

  <TextView
      android:id="@+id/convert"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/convertButton"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="120dp"
      android:text=""
      android:textAppearance="?android:attr/textAppearanceLarge" />

  <Button
      android:id="@+id/convertAIDLButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_below="@+id/convert"
      android:text="Start Remote AIDL Service" />

  <TextView
      android:id="@+id/convertAIDL"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/convertAIDLButton"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="120dp"
      android:text=""
      android:textAppearance="?android:attr/textAppearanceLarge" />

  <Button
      android:id="@+id/convertAIDLAsyncButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_below="@+id/convertAIDL"
      android:text="Start Remote AIDL Service" />

  <TextView
      android:id="@+id/convertAIDLAsync"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/convertAIDLAsyncButton"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="120dp"
      android:text=""
      android:textAppearance="?android:attr/textAppearanceLarge" />

  <TextView
      android:id="@+id/dummyTest"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/convertAIDLAsync"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="120dp"
      android:text="I Am a Dummy"
      android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
